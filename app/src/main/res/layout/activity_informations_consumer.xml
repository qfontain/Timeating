<?xml version="1.0" encoding="UTF-8"?>

<android.support.constraint.ConstraintLayout
tools:context=".Informations_consumer"
android:layout_height="match_parent"
android:layout_width="match_parent"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:android="http://schemas.android.com/apk/res/android">

<TextView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:textColor="#00bb6a"
    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
    android:text="Informations"
    android:layout_marginTop="38dp"
    android:id="@+id/textView"/>

<TextView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    android:textColor="#00bb6a"
    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
    android:text="Type de restaurant"
    android:id="@+id/textView2"
    app:layout_constraintBottom_toTopOf="@+id/checkBox4"
    android:layout_marginStart="41dp"
    android:layout_marginBottom="14dp"/>

<TextView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    android:textColor="#00bb6a"
    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
    android:text="Budget"
    android:id="@+id/textView3"
    android:layout_marginStart="41dp"
    android:layout_marginBottom="177dp"
    app:layout_constraintBottom_toBottomOf="parent"/>

<EditText
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/editText"
    android:layout_marginStart="28dp"
    app:layout_constraintStart_toEndOf="@+id/textView3"
    app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
    android:inputType="numberSigned"
    android:ems="10"/>

<CheckBox android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    android:text="Restaurant rapide"
    android:layout_marginTop="114dp"
    android:id="@+id/checkBox"
    android:layout_marginBottom="115dp"
    app:layout_constraintBottom_toBottomOf="@+id/editText"
    app:layout_constraintTop_toBottomOf="@+id/textView"
    android:layout_marginEnd="39dp"/>

<CheckBox
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    android:text="Restaurant gastronomique"
    android:id="@+id/checkBox2"
    android:layout_marginStart="41dp"
    app:layout_constraintTop_toBottomOf="@+id/checkBox"/>

<CheckBox
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:layout_constraintStart_toStartOf="@+id/checkBox5"
    android:text="Pizzeria"
    android:id="@+id/checkBox3"
    android:layout_marginStart="2dp"
    app:layout_constraintTop_toBottomOf="@+id/checkBox5"/>

<CheckBox
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:layout_constraintStart_toStartOf="@+id/checkBox"
    android:text="CafÃ©"
    android:id="@+id/checkBox4"
    app:layout_constraintBottom_toTopOf="@+id/checkBox"/>

<CheckBox
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:layout_constraintStart_toStartOf="@+id/textView2"
    android:text="Brasserie"
    android:layout_marginTop="14dp"
    android:id="@+id/checkBox5"
    app:layout_constraintTop_toBottomOf="@+id/textView2"/>

<Button
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:text="CONFIRMER" android:id="@+id/button"
    android:layout_marginBottom="30dp"
    app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>